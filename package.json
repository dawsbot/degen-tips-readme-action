{
  "name": "degen-tips-readme-action",
  "description": "GH Action to automatically add DEGEN tippers from farcaster to your readme",
  "version": "0.0.0",
  "author": "dawsbot",
  "private": true,
  "homepage": "https://github.com/dawsbot/degen-tips-readme-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dawsbot/degen-tips-readme-action.git"
  },
  "bugs": {
    "url": "https://github.com/dawsbot/degen-tips-readme-action/issues"
  },
  "keywords": [
    "degen",
    "ethereum",
    "tips",
    "actions",
    "node"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npm run lint && npm run bundle",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-jsonc": "^2.15.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "typescript": "^5.4.5"
  }
}
